{% extends "base.html" %}

{% block title %}{{ airport.code }} - NAV Management{% endblock %}

{% block navbar %}
<div class="navbar">
    <div class="navbar-brand">
        <button class="hamburger" id="hamburgerBtn">☰</button>
        <h1>{{ airport.code }} - NAV Management</h1>
    </div>
    <div class="navbar-links" id="navbarLinks">
        <a href="/dashboard">Dashboard</a>
        <a href="/profile">Profile</a>
        <a href="/logout">Logout</a>
    </div>
</div>
{% endblock %}

{% block extra_css %}
<style>
.card {
    max-width: 1200px;
}
.header-section {
    background: linear-gradient(135deg, #8B0015 0%, #5D000F 100%);
    color: white;
    padding: 2rem;
    border-radius: 10px;
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.header-section h2 {
    margin: 0;
    font-size: 2.5rem;
}
.add-gate-btn {
    background: rgba(255,255,255,0.2);
    border: 2px solid white;
    color: white;
    padding: 1rem 2rem;
    border-radius: 10px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
}
.add-gate-btn:hover {
    background: white;
    color: #8B0015;
}
.gates-section {
    margin-bottom: 3rem;
}
.gates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
}
.gate-card {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 8px;
    border: 2px solid #ddd;
}
.gate-card h4 {
    margin: 0 0 0.5rem 0;
    color: #8B0015;
}
.gate-card .coords {
    font-size: 0.85rem;
    color: #666;
}
.navs-section {
    margin-top: 3rem;
}
.nav-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
}
.nav-item {
    background: white;
    border: 2px solid #ddd;
    border-radius: 10px;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.2s;
    cursor: pointer;
}
.nav-item:hover {
    border-color: #8B0015;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}
.nav-item h3 {
    margin: 0;
    color: #333;
    font-size: 1.3rem;
}
.nav-item .checkpoint-count {
    color: #666;
    font-size: 0.9rem;
    margin-top: 0.25rem;
}
.nav-item .arrow {
    font-size: 2rem;
    color: #8B0015;
}
.add-nav-btn {
    background: linear-gradient(135deg, #8B0015 0%, #5D000F 100%);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 10px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
    transition: transform 0.2s;
}
.add-nav-btn:hover {
    transform: translateY(-2px);
}
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
}
.modal.show {
    display: flex;
    align-items: center;
    justify-content: center;
}
.modal-content {
    background-color: white;
    padding: 2rem;
    border-radius: 10px;
    max-width: 500px;
    width: 90%;
}
.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}
.close-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #666;
}
</style>
{% endblock %}

{% block content %}
<div style="margin-bottom: 1.5rem;">
    <a href="/coach/navs" style="display: inline-block; background: #6c757d; color: white; padding: 0.75rem 1.5rem; border-radius: 5px; text-decoration: none;">← Back to Airports</a>
</div>

<div class="header-section">
    <div>
        <h2>✈️ {{ airport.code }}</h2>
        <div style="font-size: 1.1rem; opacity: 0.9; margin-top: 0.5rem;">
            {{ navs|length }} NAV{{ 's' if navs|length != 1 else '' }} | {{ gates|length }} Start Gate{{ 's' if gates|length != 1 else '' }}
        </div>
    </div>
    {% if is_admin %}
    <button class="add-gate-btn" onclick="openAddGateModal()">
        ➕ Add Start Gate
    </button>
    {% endif %}
</div>

<!-- Start Gates Section -->
<div class="gates-section">
    <h3>Start Gates</h3>
    {% if gates %}
    <div class="gates-grid">
        {% for gate in gates %}
        <div class="gate-card">
            <h4>{{ gate.name }}</h4>
            <div class="coords">{{ gate.lat }}, {{ gate.lon }}</div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="info">No start gates configured. Add one above to begin.</div>
    {% endif %}
</div>

<!-- NAVs Section -->
<div class="navs-section">
    <h3>NAV Routes</h3>
    {% if is_admin %}
    <button class="add-nav-btn" onclick="openAddNavModal()">➕ Add NAV Route</button>
    {% endif %}
    
    {% if navs %}
    <div class="nav-list" style="margin-top: 2rem;">
        {% for nav in navs %}
        <div class="nav-item" onclick="window.location.href='/coach/navs/route/{{ nav.id }}'">
            <div>
                <h3>{{ nav.name }}</h3>
                <div class="checkpoint-count">{{ nav.checkpoint_count }} checkpoint{{ 's' if nav.checkpoint_count != 1 else '' }}</div>
            </div>
            <div class="arrow">→</div>
        </div>
        {% endfor %}
    </div>
    {% elif not is_admin %}
    <div class="info" style="margin-top: 1rem;">No NAV routes configured yet.</div>
    {% endif %}
</div>

<!-- Add Gate Modal -->
<div id="addGateModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add Start Gate</h2>
            <button class="close-btn" onclick="closeAddGateModal()">×</button>
        </div>
        <form method="POST" action="/coach/navs/gates/create">
            <input type="hidden" name="airport_id" value="{{ airport.id }}">
            <div style="margin-bottom: 1rem;">
                <label for="gate_name">Gate Name:</label>
                <input type="text" id="gate_name" name="name" required placeholder="e.g. Rwy 36 North">
            </div>
            <div style="margin-bottom: 1rem;">
                <label for="gate_lat">Latitude:</label>
                <input type="number" step="0.0000001" id="gate_lat" name="lat" required placeholder="37.9879732">
            </div>
            <div style="margin-bottom: 1rem;">
                <label for="gate_lon">Longitude:</label>
                <input type="number" step="0.0000001" id="gate_lon" name="lon" required placeholder="-87.9853621">
            </div>
            <div style="display: flex; gap: 1rem;">
                <button type="button" onclick="closeAddGateModal()" style="flex: 1; background: #ccc; color: #333; padding: 0.75rem; border: none; border-radius: 5px; cursor: pointer;">Cancel</button>
                <button type="submit" style="flex: 1; background: linear-gradient(135deg, #8B0015 0%, #5D000F 100%); color: white; padding: 0.75rem; border: none; border-radius: 5px; cursor: pointer;">Create Gate</button>
            </div>
        </form>
    </div>
</div>

<!-- Add NAV Modal -->
<div id="addNavModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add NAV Route</h2>
            <button class="close-btn" onclick="closeAddNavModal()">×</button>
        </div>
        <form method="POST" action="/coach/navs/routes/create">
            <input type="hidden" name="airport_id" value="{{ airport.id }}">
            <div style="margin-bottom: 1rem;">
                <label for="nav_name">NAV Name:</label>
                <input type="text" id="nav_name" name="name" required placeholder="e.g. MDH 20">
            </div>
            <div style="display: flex; gap: 1rem;">
                <button type="button" onclick="closeAddNavModal()" style="flex: 1; background: #ccc; color: #333; padding: 0.75rem; border: none; border-radius: 5px; cursor: pointer;">Cancel</button>
                <button type="submit" style="flex: 1; background: linear-gradient(135deg, #8B0015 0%, #5D000F 100%); color: white; padding: 0.75rem; border: none; border-radius: 5px; cursor: pointer;">Create NAV</button>
            </div>
        </form>
    </div>
</div>

<script>
function openAddGateModal() {
    document.getElementById('addGateModal').classList.add('show');
}

function closeAddGateModal() {
    document.getElementById('addGateModal').classList.remove('show');
}

function openAddNavModal() {
    document.getElementById('addNavModal').classList.add('show');
    document.getElementById('nav_name').focus();
}

function closeAddNavModal() {
    document.getElementById('addNavModal').classList.remove('show');
}

// Close modals when clicking outside
document.addEventListener('click', function(event) {
    if (event.target.classList.contains('modal')) {
        closeAddGateModal();
        closeAddNavModal();
    }
});
</script>

{% endblock %}
